---
import { Icon } from 'astro-icon/components';

interface Props {
  className?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { className = '', size = 'sm' } = Astro.props;

const sizeClasses = {
  sm: 'w-3 h-3',
  md: 'w-4 h-4',
  lg: 'w-5 h-5',
};
---
<Icon 
  name="mdi:chevron-down"
  class={`${sizeClasses[size]} inline-block ${className}`}
  aria-hidden="true"
/>



