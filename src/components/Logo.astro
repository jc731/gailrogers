---
import { Icon } from 'astro-icon/components';

interface Props {
  brandName?: string;
  tagline?: string;
  href?: string;
  className?: string;
}

const { 
  brandName = 'ROGERS', 
  tagline = 'LAW OFFICE',
  href = '/',
  className = ''
} = Astro.props;
---

<a 
  href={href}
  class={`flex items-center gap-0 no-underline ${className}`}
  aria-label={`${brandName} ${tagline} - Home`}
>
  <!-- Gold-brown panel with legal icon -->
  <div 
    class="flex items-center justify-center w-16 h-16 flex-shrink-0"
    style="background-color: #8C733D;"
  >
    <Icon 
      name="mdi:legal"
      class="w-10 h-10 text-white"
      aria-hidden="true"
    />
  </div>
  
  <!-- Text section -->
  <div class="flex flex-col ml-2 sm:ml-3 justify-center min-w-0 flex-1">
    <span 
      class="text-lg sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl font-bold uppercase leading-none break-words"
      style="color: #6B2B1F; font-family: 'Times New Roman', Times, serif;"
    >
      {brandName}
    </span>
    <span 
      class="text-[10px] sm:text-xs md:text-sm lg:text-base font-normal uppercase leading-tight mt-0.5 break-words"
      style="color: #6B2B1F; font-family: 'Times New Roman', Times, serif; letter-spacing: 0.15em;"
    >
      {tagline}
    </span>
  </div>
</a>

