---
interface Props {
  heading: string;
  subheading?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
}

const { heading, subheading, ctaText, ctaLink, backgroundImage } = Astro.props;
---

<section 
  class="relative bg-gradient-to-r from-brand-primary to-brand-primaryDark text-white py-20 px-4 md:px-6 lg:px-8"
  style={backgroundImage ? `background-image: url(${backgroundImage}); background-size: cover; background-position: center;` : ''}
>
  {backgroundImage && (
    <div class="absolute inset-0 bg-brand-primary/70"></div>
  )}
  <div class="container mx-auto max-w-4xl relative z-10">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">{heading}</h1>
    {subheading && (
      <p class="text-xl md:text-2xl mb-8">{subheading}</p>
    )}
    {ctaText && ctaLink && (
      <a 
        href={ctaLink}
        class="inline-block bg-white text-brand-primary px-6 py-3 rounded-lg font-semibold hover:bg-brand-light focus-ring min-h-[44px] min-w-[44px] flex items-center justify-center transition-colors"
      >
        {ctaText}
      </a>
    )}
  </div>
</section>

