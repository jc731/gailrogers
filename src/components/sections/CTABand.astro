---
import Section from '../Section.astro';
import { PADDING_COMPACT } from '../../utils/spacing';
import Button from '../Button.astro';

interface Props {
  heading: string;
  text?: string;
  primaryCTA?: {
    text: string;
    link: string;
  };
  secondaryCTA?: {
    text: string;
    link: string;
  };
  className?: string;
}

const { heading, text, primaryCTA, secondaryCTA, className = "" } = Astro.props;
---

<Section 
  className={`${PADDING_COMPACT} bg-slate-dark text-white ${className}`.trim()}
  containerClassName="container mx-auto max-w-4xl text-center"
>
  <h2 class="text-2xl sm:text-3xl font-bold mb-4 break-words">{heading}</h2>
  {
    text && (
      <p class="text-base sm:text-lg md:text-xl mb-8 break-words">{text}</p>
    )
  }
  <div class="flex flex-col sm:flex-row gap-4 justify-center">
    {
      primaryCTA && (
        <Button
          href={primaryCTA.link}
          variant="white"
          focusRing="dark"
        >
          {primaryCTA.text}
        </Button>
      )
    }
    {
      secondaryCTA && (
        <Button
          href={secondaryCTA.link}
          variant="outline-white"
          focusRing="dark"
        >
          {secondaryCTA.text}
        </Button>
      )
    }
  </div>
</Section>
