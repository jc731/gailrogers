---
interface Props {
  heading: string;
  text?: string;
  primaryCTA?: {
    text: string;
    link: string;
  };
  secondaryCTA?: {
    text: string;
    link: string;
  };
  className?: string;
}

const { heading, text, primaryCTA, secondaryCTA, className = '' } = Astro.props;
---

<section class={`bg-brand-primary text-white py-12 px-4 md:px-6 lg:px-8 ${className}`}>
  <div class="container mx-auto max-w-4xl text-center">
    <h2 class="text-2xl sm:text-3xl font-bold mb-4 break-words">{heading}</h2>
    {text && (
      <p class="text-base sm:text-lg md:text-xl mb-8 break-words">{text}</p>
    )}
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {primaryCTA && (
        <a 
          href={primaryCTA.link}
          class="inline-block bg-white text-brand-primary px-6 py-3 rounded-lg font-semibold hover:bg-brand-light focus-ring-dark min-h-[44px] min-w-[44px] flex items-center justify-center transition-colors"
        >
          {primaryCTA.text}
        </a>
      )}
      {secondaryCTA && (
        <a 
          href={secondaryCTA.link}
          class="inline-block bg-transparent border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white/10 focus-ring-dark min-h-[44px] min-w-[44px] flex items-center justify-center transition-colors"
        >
          {secondaryCTA.text}
        </a>
      )}
    </div>
  </div>
</section>

