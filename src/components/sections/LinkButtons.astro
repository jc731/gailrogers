---
import Section from '../Section.astro';
import { PADDING_STANDARD } from '../../utils/spacing';
import Button from '../Button.astro';

interface Props {
  title?: string;
  buttons: Array<{
    text: string;
    link: string;
    style?: 'primary' | 'secondary' | 'outline';
  }>;
  layout?: 'horizontal' | 'vertical' | 'grid';
  className?: string;
}

const { title, buttons, layout = 'horizontal', className = '' } = Astro.props;

const layoutClasses = {
  horizontal: 'flex flex-wrap gap-4 justify-center',
  vertical: 'flex flex-col gap-4',
  grid: 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4',
};
---

<Section className={`${PADDING_STANDARD} ${className}`.trim()} containerClassName="container mx-auto max-w-6xl">
  {title && (
    <h2 class="text-2xl sm:text-3xl font-bold mb-8 text-center break-words text-gray-900">{title}</h2>
  )}
  <div class={layoutClasses[layout]}>
    {buttons.map((button) => (
      <Button
        href={button.link}
        variant={button.style || 'primary'}
      >
        {button.text}
      </Button>
    ))}
  </div>
</Section>

