---
interface Props {
  title?: string;
  buttons: Array<{
    text: string;
    link: string;
    style?: 'primary' | 'secondary' | 'outline';
  }>;
  layout?: 'horizontal' | 'vertical' | 'grid';
  className?: string;
}

const { title, buttons, layout = 'horizontal', className = '' } = Astro.props;

const layoutClasses = {
  horizontal: 'flex flex-wrap gap-4 justify-center',
  vertical: 'flex flex-col gap-4',
  grid: 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4',
};

const buttonClasses = {
  primary: 'bg-brand-primary text-white hover:bg-brand-primaryDark',
  secondary: 'bg-brand-primaryLight text-white hover:bg-brand-primary',
  outline: 'bg-transparent border-2 border-brand-primary text-brand-primary hover:bg-brand-primary hover:text-white',
};
---

<section class={`py-12 px-4 md:px-6 lg:px-8 ${className}`}>
  <div class="container mx-auto max-w-6xl">
    {title && (
      <h2 class="text-2xl sm:text-3xl font-bold mb-8 text-center break-words">{title}</h2>
    )}
    <div class={layoutClasses[layout]}>
      {buttons.map((button) => (
        <a
          href={button.link}
          class={`inline-block px-6 py-3 rounded-lg font-semibold transition-colors text-center focus-ring min-h-[44px] min-w-[44px] flex items-center justify-center ${buttonClasses[button.style || 'primary']}`}
        >
          {button.text}
        </a>
      ))}
    </div>
  </div>
</section>

