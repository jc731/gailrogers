---
interface Props {
  content: string;
  className?: string;
}

const { content, className = '' } = Astro.props;
---

<section class={`prose prose-lg max-w-none px-4 md:px-6 lg:px-8 ${className}`}>
  <div class="container mx-auto max-w-4xl">
    <div 
      set:html={content}
      class="rich-text-content break-words"
    />
  </div>
</section>

<style>
  /* Custom heading styles matching original design */
  .rich-text-content :global(h2) {
    color: #6B2B1F; /* Reddish-brown for main headlines */
    font-size: 1.5rem; /* Mobile-first: 24px */
    font-weight: 600;
    line-height: 1.3;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-family: ui-sans-serif, system-ui, -apple-system, sans-serif;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .rich-text-content :global(h3) {
    color: #A88B4A; /* Golden-brown for subheadings */
    font-size: 1rem; /* Mobile-first: 16px */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-family: ui-sans-serif, system-ui, -apple-system, sans-serif;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Ensure body text remains black */
  .rich-text-content :global(p) {
    color: #000000;
    margin-bottom: 1rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Ensure links wrap */
  .rich-text-content :global(a) {
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  /* Responsive adjustments */
  @media (min-width: 640px) {
    .rich-text-content :global(h2) {
      font-size: 2rem; /* 32px on sm+ */
    }
    
    .rich-text-content :global(h3) {
      font-size: 1.125rem; /* 18px on sm+ */
    }
  }

  @media (min-width: 768px) {
    .rich-text-content :global(h2) {
      font-size: 2.5rem; /* 40px on md+ */
    }
    
    .rich-text-content :global(h3) {
      font-size: 1.25rem; /* 20px on md+ */
    }
  }
</style>

