---
interface Props {
  content: string;
  className?: string;
}

const { content, className = '' } = Astro.props;
---

<section class={`prose prose-lg max-w-none ${className}`}>
  <div 
    set:html={content}
    class="rich-text-content"
  />
</section>

<style>
  /* Custom heading styles matching original design */
  .rich-text-content :global(h2) {
    color: #6B2B1F; /* Reddish-brown for main headlines */
    font-size: 2rem;
    font-weight: 600;
    line-height: 1.3;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-family: ui-sans-serif, system-ui, -apple-system, sans-serif;
  }

  .rich-text-content :global(h3) {
    color: #A88B4A; /* Golden-brown for subheadings */
    font-size: 1.125rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-family: ui-sans-serif, system-ui, -apple-system, sans-serif;
  }

  /* Ensure body text remains black */
  .rich-text-content :global(p) {
    color: #000000;
    margin-bottom: 1rem;
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    .rich-text-content :global(h2) {
      font-size: 2.5rem;
    }
    
    .rich-text-content :global(h3) {
      font-size: 1.25rem;
    }
  }
</style>

