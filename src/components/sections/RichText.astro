---
import Section from '../Section.astro';
import { PADDING_COMPACT } from '../../utils/spacing';

interface Props {
  content: string;
  className?: string;
  sectionClassName?: string;
  containerClassName?: string;
}

const { content, className = '', sectionClassName, containerClassName } = Astro.props;

const defaultSectionClassName = `${PADDING_COMPACT} prose prose-lg max-w-none ${className}`.trim();
const finalSectionClassName = sectionClassName || defaultSectionClassName;
const finalContainerClassName = containerClassName || 'container mx-auto max-w-6xl';
---

<Section className={finalSectionClassName} containerClassName={finalContainerClassName}>
  <div 
    set:html={content}
    class="rich-text-content break-words"
  />
</Section>

<style>
  /* Custom heading styles matching original design */
  .rich-text-content :global(h2) {
    color: #6B2B1F; /* Reddish-brown for main headlines */
    font-size: 1.5rem; /* Mobile-first: 24px */
    font-weight: 600;
    line-height: 1.3;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    font-family: ui-sans-serif, system-ui, -apple-system, sans-serif;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .rich-text-content :global(h3) {
    color: #8C733D; /* Golden-brown for subheadings - darker for WCAG AA contrast */
    font-size: 1rem; /* Mobile-first: 16px */
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-family: ui-sans-serif, system-ui, -apple-system, sans-serif;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Ensure body text remains black */
  .rich-text-content :global(p) {
    color: #000000;
    margin-bottom: 1rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Ensure list items and strong text are dark */
  .rich-text-content :global(ul),
  .rich-text-content :global(ol) {
    color: #000000;
  }

  .rich-text-content :global(li) {
    color: #000000;
  }

  .rich-text-content :global(strong) {
    color: #000000;
    font-weight: 700;
  }

  /* Ensure links wrap */
  .rich-text-content :global(a) {
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  /* Responsive adjustments */
  @media (min-width: 640px) {
    .rich-text-content :global(h2) {
      font-size: 2rem; /* 32px on sm+ */
    }
    
    .rich-text-content :global(h3) {
      font-size: 1.125rem; /* 18px on sm+ */
    }
  }

  @media (min-width: 768px) {
    .rich-text-content :global(h2) {
      font-size: 2.5rem; /* 40px on md+ */
    }
    
    .rich-text-content :global(h3) {
      font-size: 1.25rem; /* 20px on md+ */
    }
  }
</style>

