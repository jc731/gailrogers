---
interface Props {
  id: string;
  name: string;
  label: string;
  required?: boolean;
  placeholder?: string;
  value?: string;
  rows?: number;
  error?: string;
  className?: string;
}

const {
  id,
  name,
  label,
  required = false,
  placeholder,
  value,
  rows = 4,
  error,
  className = '',
} = Astro.props;
---

<div class={`form-field ${className}`}>
  <label for={id} class="block text-sm font-medium text-gray-900 mb-1">
    {label}
    {required && <span class="text-red-600" aria-hidden="true">*</span>}
  </label>
  <textarea
    id={id}
    name={name}
    rows={rows}
    placeholder={placeholder}
    required={required}
    aria-required={required}
    aria-invalid={error ? 'true' : 'false'}
    aria-describedby={error ? `${id}-error` : undefined}
    autocomplete={name === 'message' ? 'off' : 'off'}
    class={`w-full px-4 py-2 border border-gray-300 rounded-md focus-ring min-h-[44px] transition-colors resize-y ${
      error ? 'border-red-500' : ''
    }`}
  >{value || ''}</textarea>
  {error && (
    <p id={`${id}-error`} class="mt-1 text-sm text-red-600 break-words" role="alert">
      {error}
    </p>
  )}
</div>

