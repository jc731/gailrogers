---
import FormInput from './FormInput.astro';
import FormTextarea from './FormTextarea.astro';
import Button from '../Button.astro';
import Section from '../Section.astro';
import { PADDING_STANDARD } from '../../utils/spacing';

interface Props {
  title?: string;
  introText?: string;
  className?: string;
}

const {
  title = 'Contact us',
  introText = 'Please fill out the form below and I will contact you.',
  className = '',
} = Astro.props;
---

<Section 
  className={`${PADDING_STANDARD} contact-form-section ${className}`.trim()}
  containerClassName="container mx-auto max-w-6xl"
>
  <div class="bg-white border-l-4 border-r-4 border-heading-subheading px-4 sm:px-6 py-8 shadow-sm">
    <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4 break-words">{title}</h2>
    {introText && (
      <p class="text-gray-700 mb-6 break-words">{introText}</p>
    )}
      
      <form
        id="contact-form"
        method="POST"
        action="#"
        class="space-y-6"
        novalidate
      >
        <FormInput
          id="contact-name"
          name="name"
          label="Full Name"
          type="text"
          required={true}
        />
        
        <FormInput
          id="contact-email"
          name="email"
          label="Email Address"
          type="email"
          required={true}
        />
        
        <FormInput
          id="contact-phone"
          name="phone"
          label="Phone Number"
          type="tel"
          required={true}
        />
        
        <FormTextarea
          id="contact-message"
          name="message"
          label="Message"
          rows={6}
          required={true}
        />
        
        <div class="pt-4">
          <Button
            type="submit"
            variant="heading-subheading"
            size="lg"
            fullWidth={true}
            rounded="md"
            focusRing="dark"
          >
            Submit
          </Button>
        </div>
      </form>
  </div>
</Section>

<style>
  .contact-form-section {
    background-color: #ffffff;
  }
  
  .contact-form-section .border-heading-subheading {
    border-color: #8C733D;
  }
</style>

